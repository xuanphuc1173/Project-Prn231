    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.7/signalr.min.js"></script>
        <script>
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/chathub")
                .build();

            // Đối tượng để lưu trữ các chat box
            const chatBoxes = {};

            // Bắt đầu kết nối
            connection.start().then(() => {
                connection.invoke("JoinAdminChat"); // Tham gia nhóm chat của admin
                loadAllChatBoxes(); // Tải tất cả chat box từ localStorage khi kết nối
            }).catch(err => console.error(err));

            // Nhận tin nhắn từ server
            connection.on("ReceiveMessage", (user, message) => {
                // Kiểm tra xem chat box cho user đã tồn tại chưa
                if (!chatBoxes[user]) {
                    createChatBox(user);
                }
                let messageType = "user-message"; // Mặc định là tin nhắn từ user

                // Kiểm tra xem tin nhắn có bắt đầu bằng "Admin: " không
                if (message.startsWith("Admin: ")) {
                    messageType = "admin-message"; // Gán là tin nhắn từ admin
                    message = message.replace("Admin: ", ""); // Xóa "Admin: " khỏi tin nhắn
                }
                // Cập nhật tin nhắn cho chat box tương ứng
                updateChatBoxMessages(user, message, messageType);
                saveMessagesToStorage(user, message); // Lưu tin nhắn vào localStorage
            });

            // Lưu tin nhắn vào localStorage
            function saveMessagesToStorage(userId, message) {
                const existingMessages = JSON.parse(localStorage.getItem(userId)) || [];
                existingMessages.push(message);
                localStorage.setItem(userId, JSON.stringify(existingMessages));
            }
            // Tạo một chat box mới cho user
            function createChatBox(userId) {
                const chatBoxDiv = document.createElement("div");
                chatBoxDiv.classList.add("chat-box");
                chatBoxDiv.id = `${userId}ChatBox`;

                const chatHeader = document.createElement("div");
                chatHeader.classList.add("chat-header");
                chatHeader.innerHTML = `<h5 style=" font-size: 20px; color: white;">${userId} </h5><button class="close-button" onclick="closeChatBox('${userId}')">x</button>`;

                const chatContent = document.createElement("div");
                chatContent.classList.add("chat-content");
                chatContent.innerHTML = `<ul id="${userId}-messages"></ul>`;

                const chatFooter = document.createElement("div");
                chatFooter.classList.add("chat-footer");
                chatFooter.innerHTML = `<input id="${userId}-messageInput" type="text" placeholder="Enter your message here..." />
                                                       <button onclick="sendMessage('${userId}')">Send</button>`;

                chatBoxDiv.appendChild(chatHeader);
                chatBoxDiv.appendChild(chatContent);
                chatBoxDiv.appendChild(chatFooter);

                document.getElementById("chatContainer").appendChild(chatBoxDiv);
                chatBoxes[userId] = chatBoxDiv; // Lưu trữ chat box

                // Tải tin nhắn từ localStorage
                loadMessagesFromStorage(userId);
            }

            // Tải tin nhắn từ localStorage
            function loadMessagesFromStorage(userId) {
                const messages = JSON.parse(localStorage.getItem(userId)) || [];
                messages.forEach(msg => {
                    const messageType = msg.startsWith("Admin: ") ? "admin-message" : "user-message";
                    const messageText = msg.replace("Admin: ", ""); // Xóa "Admin: " nếu có
                    updateChatBoxMessages(userId, messageText, messageType);
                });
            }

            // Tải tất cả chat box từ localStorage
            function loadAllChatBoxes() {
                const keys = Object.keys(localStorage);
                keys.forEach(key => {
                    createChatBox(key); // Tạo chat box cho mỗi userId trong localStorage
                });
            }

            // Cập nhật tin nhắn cho chat box tương ứng
            function updateChatBoxMessages(userId, message, messageType) {
                const messagesDiv = document.getElementById(`${userId}-messages`);
                const msgDiv = document.createElement("div");
                msgDiv.textContent = message;
                msgDiv.classList.add(messageType);
                messagesDiv.appendChild(msgDiv);
            }

            // Gửi tin nhắn khi nhấn nút Send
            function sendMessage(userId) {
                const message = document.getElementById(`${userId}-messageInput`).value;
                if (message.trim() !== "") { // Kiểm tra xem tin nhắn không rỗng
                    const formattedMessage = `Admin: ${message}`;
                    connection.invoke("SendMessage", userId, formattedMessage);
                    document.getElementById(`${userId}-messageInput`).value = ""; // Xóa input sau khi gửi
                }
            }

            // Đóng chat box
            function closeChatBox(userId) {
                const chatBox = chatBoxes[userId];
                if (chatBox) {
                    chatBox.remove(); // Xóa chat box khỏi DOM
                    delete chatBoxes[userId]; // Xóa khỏi đối tượng chatBoxes
                    localStorage.removeItem(userId); // Xóa tin nhắn khỏi localStorage nếu cần
                }
            }
        </script>


